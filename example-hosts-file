# User hosts configuration

[test_host]
51.83.255.5

[test_host:vars]
ansible_user=debian
ansible_ssh_private_key_file=~/.ssh/oceannik/INFRA_SSH_PRIVATE_KEY_1

# User hosts matching for Oceannik groups

# The Load Balancer is hosted on the master node.
# There should be only one master node.
[oceannik_master:children]
test_host

# Service containers will be executed on the defined nodes.
# The same host can be used for the master and for the node.
[oceannik_nodes:children]
test_host
